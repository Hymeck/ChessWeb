@model UserRegisterViewModel
@{
    ViewBag.Title = UserLabels.RegistrationTitle;
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-3">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Name"></label>
                <br/>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Email"></label><br/>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label><br/>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="PasswordConfirm"></label><br/>
                <input asp-for="PasswordConfirm" class="form-control"/>
                <span asp-validation-for="PasswordConfirm"></span><br/>
            </div>
            
            <div>
                <button type="submit" class="btn btn-primary">@UserLabels.RegistrationButton</button>
            </div>
            
        </form>
    </div>
</div>